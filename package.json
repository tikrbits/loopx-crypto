{
  "name": "@loopx/crypto",
  "version": "1.0.1",
  "description": "The missing crypto module for Node.js. It provides you with a consistent interface across Node.js and the browser.",
  "main": "index.js",
  "types": "index.d.ts",
  "engines": {
    "node": ">=10.16"
  },
  "author": "ty <towyuan@outlook.com>",
  "license": "MIT",
  "keywords": [
    "crypto",
    "crypt",
    "hash",
    "sign",
    "verify"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tikrbits/loopx-crypto"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "version": "cross-env CI=1 node scripts/prerelease.js",
    "release": "np --no-2fa --contents dist",
    "build": "lb-tsc -b",
    "postbuild": "cpx \"./src/__tests__/data/**/*\" \"./dist/__tests__/data\"",
    "build:full": "npm ci --ignore-scripts && npm run clean && npm run build",
    "precoverage": "npm test",
    "coverage": "lb-nyc report --reporter=text-summary",
    "lint": "npm run prettier:check && npm run eslint",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "lb-eslint --report-unused-disable-directives --cache .",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "lb-prettier \"**/*.ts\" \"**/*.js\" \"**/*.md\"",
    "prettier:check": "npm run prettier:cli -- --check",
    "prettier:fix": "npm run prettier:cli -- --write",
    "format": "npm run prettier:fix",
    "clean": "lb-clean dist coverage .nyc_output *.tsbuildinfo",
    "pretest": "npm run clean && npm run format",
    "test": "lb-nyc npm run mocha",
    "test:js": "NODE_BACKEND=js npm run test",
    "posttest": "npm run lint",
    "premocha": "npm run build",
    "mocha": "lb-mocha \"dist/__tests__/**/*.js\"",
    "preunit": "npm run build",
    "unit": "lb-mocha \"dist/__tests__/unit/**/*.js\""
  },
  "dependencies": {
    "@loopx/bufio": "^1.2.1",
    "bcrypto": "^5.4.0",
    "tslib": "^2.1.0"
  },
  "devDependencies": {
    "@loopback/build": "^6.2.9",
    "@loopback/eslint-config": "^10.0.5",
    "@loopback/testlab": "^3.2.12",
    "@loopx/bsert": "^0.3.0",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.7",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.28",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "chalk": "^4.1.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.20.0",
    "eslint-plugin-mocha": "^8.0.0",
    "fs-extra": "^9.1.0",
    "mocha": "^8.3.0",
    "np": "^7.4.0",
    "ora": "^5.3.0",
    "typescript": "^4.1.5"
  },
  "browser": {
    "./aead": "./aead-browser.js",
    "./aes": "./aes-browser.js",
    "./arc4": "./arc4-browser.js",
    "./bcrypt": "./bcrypt-browser.js",
    "./blake2b": "./blake2b-browser.js",
    "./blake2s": "./blake2s-browser.js",
    "./bn": "./bn-browser.js",
    "./chacha20": "./chacha20-browser.js",
    "./cipher": "./cipher-browser.js",
    "./cleanse": "./cleanse-browser.js",
    "./ctr-drbg": "./ctr-drbg-browser.js",
    "./dsa": "./dsa-browser.js",
    "./eb2k": "./eb2k-browser.js",
    "./ed25519": "./ed25519-browser.js",
    "./ed448": "./ed448-browser.js",
    "./encoding/base16": "./encoding/base16-browser.js",
    "./encoding/base32": "./encoding/base32-browser.js",
    "./encoding/base58": "./encoding/base58-browser.js",
    "./encoding/base64": "./encoding/base64-browser.js",
    "./encoding/bech32": "./encoding/bech32-browser.js",
    "./encoding/cash32": "./encoding/cash32-browser.js",
    "./gost94": "./gost94-browser.js",
    "./hash160": "./hash160-browser.js",
    "./hash256": "./hash256-browser.js",
    "./hash-drbg": "./hash-drbg-browser.js",
    "./hkdf": "./hkdf-browser.js",
    "./hmac-drbg": "./hmac-drbg-browser.js",
    "./internal/custom": "./internal/custom-browser.js",
    "./internal/pgpdf": "./internal/pgpdf-browser.js",
    "./keccak": "./keccak-browser.js",
    "./md2": "./md2-browser.js",
    "./md4": "./md4-browser.js",
    "./md5": "./md5-browser.js",
    "./md5sha1": "./md5sha1-browser.js",
    "./murmur3": "./murmur3-browser.js",
    "./p192": "./p192-browser.js",
    "./p224": "./p224-browser.js",
    "./p256": "./p256-browser.js",
    "./p384": "./p384-browser.js",
    "./p521": "./p521-browser.js",
    "./pbkdf2": "./pbkdf2-browser.js",
    "./poly1305": "./poly1305-browser.js",
    "./random": "./random-browser.js",
    "./ripemd160": "./ripemd160-browser.js",
    "./rsa": "./rsa-browser.js",
    "./salsa20": "./salsa20-browser.js",
    "./schnorr": "./schnorr-browser.js",
    "./scrypt": "./scrypt-browser.js",
    "./secp256k1": "./secp256k1-browser.js",
    "./secretbox": "./secretbox-browser.js",
    "./sha1": "./sha1-browser.js",
    "./sha224": "./sha224-browser.js",
    "./sha256": "./sha256-browser.js",
    "./sha384": "./sha384-browser.js",
    "./sha512": "./sha512-browser.js",
    "./sha3": "./sha3-browser.js",
    "./siphash": "./siphash-browser.js",
    "./whirlpool": "./whirlpool-browser.js",
    "./x25519": "./x25519-browser.js",
    "./x448": "./x448-browser.js"
  }
}
